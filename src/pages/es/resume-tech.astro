---
import Layout from '../../layouts/Layout.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Currículum de Tecnología y Agile" description="Scrum Master Certificada con sólida coordinación de proyectos y entusiasmo por TI" lang="es">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-obsidian">
     <!-- Tech Background Effect -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(18,18,18,0.9),rgba(18,18,18,0.95)),url('/grid-pattern.svg')] opacity-20"></div>
    <div class="absolute top-0 left-1/4 w-1/3 h-1/3 bg-tech/10 blur-3xl rounded-full pointer-events-none"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="relative animate-scale-in group">
          <div class="w-40 h-40 rounded-full overflow-hidden border-2 border-tech/50 shadow-[0_0_30px_rgba(74,143,127,0.3)] group-hover:border-tech transition-colors duration-500 relative z-10">
            <img
              src={`${base}images/profile-tech.jpg`}
              alt="Milmar Ramirez"
              class="w-full h-full object-cover transition-all duration-500 group-hover:scale-110"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="hidden w-full h-full items-center justify-center text-white text-3xl font-bold bg-charcoal" style="font-family: var(--font-heading);">
              MR
            </div>
          </div>
          
          <!-- Tech Hexagon/Circle Decoration -->
          <svg class="absolute -top-3 -left-3 w-46 h-46 text-tech/30 animate-spin-slow" viewBox="0 0 100 100" style="width: 115%; height: 115%; left: -7.5%; top: -7.5%;">
             <circle cx="50" cy="50" r="48" fill="none" stroke="currentColor" stroke-width="0.5" stroke-dasharray="4 4" />
          </svg>

          <div class="absolute -bottom-2 -right-4 bg-tech text-white px-4 py-1.5 rounded-sm text-xs font-bold shadow-lg tracking-wider transform rotate-[-2deg] hover:rotate-0 transition-transform z-20">
            SCRUM MASTER CERTIFICADA
          </div>
        </div>

        <!-- Header Info -->
        <div class="text-center md:text-left animate-slide-up flex-1">
          <div class="inline-flex items-center gap-2 mb-4">
             <span class="w-2 h-2 rounded-full bg-tech animate-pulse"></span>
             <span class="text-xs font-bold tracking-[0.2em] text-tech uppercase">Tecnología y Agile</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-3" style="font-family: var(--font-heading);">
            Milmar Ramirez
          </h1>
          <p class="text-xl text-silver mb-8 font-light">Coordinadora de Proyectos | Entusiasta de TI</p>

          <div class="flex flex-wrap gap-6 justify-center md:justify-start text-sm">
            <a href="mailto:milmarramirez0618@gmail.com" class="flex items-center text-gray-400 hover:text-tech transition-colors group">
              <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </span>
              Envíame un correo
            </a>
            <a href="https://www.linkedin.com/in/milmarramirez/" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-400 hover:text-tech transition-colors group">
               <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
               </span>
              LinkedIn
            </a>
            <span class="flex items-center text-gray-500">
               <span class="p-2 bg-white/5 rounded-full mr-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
               </span>
              Al Khobar, Arabia Saudita
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-onyx relative">
    <div class="absolute top-0 w-full h-[1px] bg-gradient-to-r from-transparent via-tech/30 to-transparent"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-16">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-16">
          <!-- Profile Summary -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-tech);"></span>
              Perfil Profesional
            </h2>
            <div class="text-gray-300 leading-relaxed text-lg font-light border-l-2 border-white/5 pl-6 py-2">
              <strong class="text-white">Scrum Master</strong> certificada con pasión por la IA y TI, aportando una mezcla única de experiencia técnica
              y habilidades de comunicación excepcionales. Con más de una década de experiencia en entornos de transmisión de alta presión,
              me destaco guiando equipos a través de desafíos, coordinando proyectos complejos y asegurando una comunicación clara entre
              todas las partes interesadas. Mi experiencia liderando producciones en vivo y gestionando situaciones de crisis se traduce
              directamente en una gestión ágil de proyectos efectiva y liderazgo de equipos tecnológicos.
            </div>
          </div>

          <!-- Work Experience -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-8 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-tech);"></span>
              Experiencia Relevante
            </h2>

            <div class="space-y-12">
              <!-- The Weather Channel -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-tech ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div>
                      <h3 class="text-xl font-bold text-white">Meteoróloga en Cámara y Líder de Equipo</h3>
                      <p class="text-tech font-medium">The Weather Channel</p>
                  </div>
                  <span class="inline-block mt-2 sm:mt-0 px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2022 - 2024</span>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Lideró equipos multifuncionales durante eventos de cobertura de tormentas de alto riesgo
                  </li>
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Coordinó la comunicación en tiempo real entre el estudio, equipos de campo y personal técnico
                  </li>
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Gestionó la iteración rápida y adaptación durante transmisiones en vivo (mentalidad ágil)
                  </li>
                </ul>
              </div>

              <!-- Frankie's Kitchen -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-tech ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div>
                      <h3 class="text-xl font-bold text-white">Gerente de Producto</h3>
                      <p class="text-tech font-medium">Frankie Vs Kitchen</p>
                  </div>
                  <span class="inline-block mt-2 sm:mt-0 px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2018 - 2019</span>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Gestionó múltiples líneas de producción, supervisando el ciclo de vida desde la ideación hasta la entrega
                  </li>
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Implementó mejoras de procesos para optimizar la salida y mantener estándares de calidad
                  </li>
                </ul>
              </div>

              <!-- Telemundo -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-gray-600 ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div>
                      <h3 class="text-xl font-bold text-white">Coordinadora de Operaciones y Meteoróloga</h3>
                      <p class="text-tech font-medium">Telemundo 39</p>
                  </div>
                  <span class="inline-block mt-2 sm:mt-0 px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2015 - 2018</span>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Usuaria avanzada de la pila tecnológica IBM WSI: Max Reality, Social, seguimiento de tormentas y Radar
                  </li>
                  <li class="flex items-start">
                    <span class="text-tech mr-3 transform translate-y-[2px]">▸</span>
                    Coordinó la planificación de cobertura de clima severo, asignación de recursos y logística de equipos de campo
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
           <!-- Certifications -->
          <div class="reveal p-6 rounded-sm bg-gradient-to-br from-charcoal to-obsidian border border-tech/30 relative overflow-hidden">
             <div class="absolute top-0 right-0 w-16 h-16 bg-tech/10 blur-xl rounded-full"></div>
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2 relative z-10">
              Certificaciones
            </h2>
            <div class="flex items-center gap-4 relative z-10">
              <div class="w-12 h-12 rounded-sm flex items-center justify-center bg-tech/20 border border-tech/30 text-tech">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" /></svg>
              </div>
              <div>
                <p class="font-bold text-white">Scrum Master</p>
                <p class="text-xs text-tech mt-1">Certificada 2025</p>
              </div>
            </div>
          </div>

          <!-- Technical Skills -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-tech/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Stack Técnico
            </h2>
            <div class="flex flex-wrap gap-2">
              {['Scrum / Agile', 'Gestión de Proyectos', 'Desarrollo de Producto', 'Liderazgo de Equipos', 'IA y TI', 'Sistemas IBM WSI', 'Gráficos 3D', 'JIRA / Confluence'].map(skill => (
                  <span class="px-3 py-1 bg-white/5 text-gray-300 text-xs rounded-sm border border-white/5 hover:border-tech/50 hover:text-tech transition-colors cursor-default">
                      {skill}
                  </span>
              ))}
            </div>
          </div>
          
           <!-- Core Competencies -->
           <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-tech/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Competencias
            </h2>
            <div class="space-y-4">
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-tech rounded-full"></div>
                  <span class="text-gray-400 text-sm">Clear Communication</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-tech rounded-full"></div>
                  <span class="text-gray-400 text-sm">Team Facilitation</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-tech rounded-full"></div>
                  <span class="text-gray-400 text-sm">Fast Adaptation</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-tech rounded-full"></div>
                  <span class="text-gray-400 text-sm">Quality Assurance</span>
               </div>
            </div>
          </div>

          <!-- Education -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-tech/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Educación
            </h2>
            <div>
              <p class="font-bold text-white text-lg">Doble Licenciatura en Ciencias</p>
              <p class="text-sm text-gray-400 mb-2">Ciencias Atmosféricas y Matemáticas</p>
              <p class="text-sm font-semibold text-tech">Universidad de Miami</p>
              <p class="text-xs text-gray-500 mt-1 font-mono">2011 - 2014</p>
            </div>
          </div>

          <!-- Download / Print -->
          <div class="reveal">
            <button onclick="window.print()" class="w-full btn-secondary group flex items-center justify-center gap-2 border-white/20 hover:border-tech hover:text-tech text-white">
              <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Imprimir Currículum
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Resumes CTA -->
  <section class="py-16 bg-charcoal border-t border-white/5">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        Ampliar el Alcance
      </h3>
      <div class="flex flex-wrap justify-center gap-6">
        <a href={`${base}resume-broadcast`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-broadcast/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-broadcast/10 text-broadcast group-hover:bg-broadcast group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Meteorología</div>
             <div class="text-xs text-gray-500 group-hover:text-broadcast transition-colors">Meteoróloga</div>
          </div>
        </a>
        
        <a href={`${base}resume-educator`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-educator/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-educator/10 text-educator group-hover:bg-educator group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Educación</div>
             <div class="text-xs text-gray-500 group-hover:text-educator transition-colors">Comunicadora Científica</div>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @media print {
    nav, footer, section:last-child {
      display: none !important;
    }
    body {
       background-color: white !important;
       color: black !important;
    }
    section {
       background-color: white !important;
       background: none !important;
       padding-top: 0 !important;
       padding-bottom: 2rem !important;
    }
    .text-white, .text-silver, .text-gray-300, .text-gray-400 {
       color: black !important;
    }
    .bg-charcoal, .bg-obsidian, .bg-onyx {
       background-color: transparent !important;
       border: none !important;
    }
    .border-white\/5, .border-white\/10 {
       border-color: #ddd !important;
    }
    h1, h2, h3 {
       color: black !important;
    }
  }
</style>
