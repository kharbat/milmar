---
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Milmar Ramirez - Broadcast Resume</title>
    <style>
      @page {
        size: letter;
        margin: 0.5in 0.6in;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        color: #1a1a1a;
        line-height: 1.5;
        font-size: 10pt;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }

      /* Header */
      .header {
        display: flex;
        align-items: center;
        gap: 24px;
        padding-bottom: 16px;
        border-bottom: 2px solid #c17e60;
        margin-bottom: 20px;
      }

      .photo {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #c17e60;
        flex-shrink: 0;
      }

      .header-info {
        flex: 1;
      }

      .header-info h1 {
        font-size: 22pt;
        font-weight: 700;
        color: #1a1a1a;
        line-height: 1.1;
        margin-bottom: 2px;
      }

      .subtitle {
        font-size: 11pt;
        color: #c17e60;
        font-weight: 500;
        margin-bottom: 8px;
      }

      .contact-row {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        font-size: 8.5pt;
        color: #555;
      }

      .contact-row span {
        display: flex;
        align-items: center;
        gap: 4px;
      }

      .contact-row svg {
        width: 12px;
        height: 12px;
        flex-shrink: 0;
      }

      .badge {
        display: inline-block;
        background: #c17e60;
        color: white;
        font-size: 7pt;
        font-weight: 700;
        padding: 2px 8px;
        letter-spacing: 0.1em;
        margin-left: 12px;
        vertical-align: middle;
        position: relative;
        top: -2px;
      }

      /* Layout */
      .content {
        display: grid;
        grid-template-columns: 1fr 220px;
        gap: 28px;
      }

      /* Section headings */
      .section-title {
        font-size: 10pt;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: #c17e60;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 4px;
        margin-bottom: 12px;
      }

      /* Experience entries */
      .job {
        margin-bottom: 14px;
        padding-left: 12px;
        border-left: 2px solid #e0e0e0;
      }

      .job-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 2px;
      }

      .job-title {
        font-size: 10.5pt;
        font-weight: 700;
        color: #1a1a1a;
      }

      .job-date {
        font-size: 8pt;
        color: #888;
        font-family: 'Courier New', monospace;
        white-space: nowrap;
      }

      .job-company {
        font-size: 9pt;
        color: #c17e60;
        font-weight: 600;
        margin-bottom: 4px;
      }

      .job ul {
        list-style: none;
        padding: 0;
      }

      .job li {
        font-size: 9pt;
        color: #444;
        padding-left: 12px;
        position: relative;
        margin-bottom: 2px;
        line-height: 1.45;
      }

      .job li::before {
        content: '\25B8';
        position: absolute;
        left: 0;
        color: #c17e60;
      }

      /* Profile summary */
      .profile-text {
        font-size: 9.5pt;
        color: #333;
        line-height: 1.55;
        margin-bottom: 16px;
        padding-left: 12px;
        border-left: 2px solid #c17e60;
      }

      .profile-text strong {
        color: #1a1a1a;
        font-weight: 600;
      }

      /* Sidebar */
      .sidebar {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .sidebar-block {
        padding: 10px 12px;
        background: #fafafa;
        border: 1px solid #eee;
      }

      .sidebar-block h3 {
        font-size: 8.5pt;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: #c17e60;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 3px;
        margin-bottom: 8px;
      }

      .edu-degree {
        font-weight: 700;
        font-size: 9.5pt;
        color: #1a1a1a;
      }

      .edu-field {
        font-size: 8.5pt;
        color: #666;
        margin-bottom: 2px;
      }

      .edu-school {
        font-size: 8.5pt;
        font-weight: 600;
        color: #c17e60;
      }

      .edu-date {
        font-size: 7.5pt;
        color: #999;
        font-family: 'Courier New', monospace;
        margin-top: 1px;
      }

      /* Skills tags */
      .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
      }

      .skill-tag {
        font-size: 7.5pt;
        padding: 2px 7px;
        border: 1px solid #ddd;
        color: #444;
        background: white;
      }

      /* Languages */
      .lang-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 8.5pt;
        margin-bottom: 4px;
      }

      .lang-name {
        font-weight: 500;
        color: #1a1a1a;
      }

      .lang-level {
        font-size: 7.5pt;
        color: #c17e60;
        font-weight: 600;
      }

      .lang-bar {
        height: 3px;
        background: #eee;
        margin-bottom: 8px;
        overflow: hidden;
      }

      .lang-bar-fill {
        height: 100%;
        background: #c17e60;
      }

      /* Website link */
      .website-link {
        text-align: center;
        font-size: 8pt;
        color: #888;
        margin-top: 8px;
        padding-top: 8px;
        border-top: 1px solid #e0e0e0;
      }

      .website-link a {
        color: #c17e60;
        text-decoration: none;
        font-weight: 600;
      }

      /* Video highlights */
      .video-section {
        margin-top: 16px;
        padding-top: 16px;
        border-top: 2px solid #c17e60;
      }

      .video-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 8px;
        margin-top: 10px;
      }

      .video-thumb {
        position: relative;
        display: block;
        overflow: hidden;
        border: 1px solid #ddd;
        text-decoration: none;
      }

      .video-thumb img {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
        display: block;
      }

      .play-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 28px;
        height: 28px;
        background: rgba(193, 126, 96, 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .play-icon svg {
        width: 12px;
        height: 12px;
        fill: white;
        margin-left: 2px;
      }

      .video-label {
        font-size: 6.5pt;
        color: #888;
        text-align: center;
        padding: 2px 0;
        text-decoration: none;
      }

      /* Print button - hidden on print */
      .print-actions {
        position: fixed;
        top: 16px;
        right: 16px;
        display: flex;
        gap: 8px;
        z-index: 100;
      }

      .print-actions button,
      .print-actions a {
        padding: 8px 20px;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }

      .btn-print {
        background: #c17e60;
        color: white;
      }

      .btn-print:hover {
        background: #a86b50;
      }

      .btn-back {
        background: #f0f0f0;
        color: #333;
        border: 1px solid #ddd;
      }

      .btn-back:hover {
        background: #e0e0e0;
      }

      @media print {
        .print-actions {
          display: none !important;
        }
      }
    </style>
  </head>
  <body style="padding: 20px 28px;">
    <!-- Print / Back buttons -->
    <div class="print-actions">
      <a href={`${base}resume-broadcast`} class="btn-back">
        <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
        Back
      </a>
      <button class="btn-print" onclick="window.print()">
        <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/></svg>
        Print
      </button>
    </div>

    <!-- Header -->
    <div class="header">
      <img src={`${base}images/profile-broadcast.jpg`} alt="Milmar Ramirez" class="photo" />
      <div class="header-info">
        <h1>Milmar Ramirez <span class="badge">EMMY WINNER</span></h1>
        <div class="subtitle">TV Meteorologist & Science Communicator</div>
        <div class="contact-row">
          <span>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            milmar.ramirez@gmail.com
          </span>
          <span>
            <svg fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            linkedin.com/in/milmarramirez
          </span>
          <span>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            Khobar, Saudi Arabia
          </span>
        </div>
      </div>
    </div>

    <!-- Two-column layout -->
    <div class="content">
      <!-- Main column -->
      <div>
        <!-- Profile -->
        <h2 class="section-title">Professional Profile</h2>
        <div class="profile-text">
          TV Meteorologist with over a decade of on-camera experience delivering
          accurate weather forecasts and leading severe weather coverage. Expert in hurricane reporting,
          crisis communication, and engaging audiences across major networks including <strong>The Weather Channel</strong>,
          <strong>Telemundo</strong>, and <strong>Univision</strong>. Known for translating complex atmospheric science into compelling,
          accessible broadcasts that keep communities informed and safe.
        </div>

        <!-- Career History -->
        <h2 class="section-title">Career History</h2>

        <div class="job">
          <div class="job-header">
            <span class="job-title">On-Camera Meteorologist</span>
            <span class="job-date">2022 - 2024</span>
          </div>
          <div class="job-company">The Weather Channel</div>
          <ul>
            <li>Anchor of morning shows reaching millions of viewers nationwide</li>
            <li>Covered severe storms including hurricanes in studio and field locations</li>
            <li>Led team on storm coverage for hurricanes, severe weather, and snow events</li>
          </ul>
        </div>

        <div class="job">
          <div class="job-header">
            <span class="job-title">TV Meteorologist</span>
            <span class="job-date">2015 - 2018</span>
          </div>
          <div class="job-company">Telemundo 39</div>
          <ul>
            <li>Presented daily weather forecasts for Spanish-speaking audiences</li>
            <li>Advanced 3D graphics production using IBM WSI: Max Reality, Social, Storm tracking</li>
            <li>Led severe weather coverage planning and coordinated news reporter locations</li>
          </ul>
        </div>

        <div class="job">
          <div class="job-header">
            <span class="job-title">TV Meteorologist</span>
            <span class="job-date">2014 - 2015</span>
          </div>
          <div class="job-company">Univision 23</div>
          <ul>
            <li>Forecasted, produced graphics, and presented weather Monday to Friday mornings</li>
            <li>Utilized Weather Central Fusion systems for dynamic storytelling</li>
          </ul>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="sidebar">
        <div class="sidebar-block">
          <h3>Education</h3>
          <div class="edu-degree">Double Bachelor of Science</div>
          <div class="edu-field">Atmospheric Science & Mathematics</div>
          <div class="edu-school">University of Miami</div>
          <div class="edu-date">2011 - 2014</div>
        </div>

        <div class="sidebar-block">
          <h3>Expertise</h3>
          <div class="skills-list">
            <span class="skill-tag">Live Broadcasting</span>
            <span class="skill-tag">Weather Forecasting</span>
            <span class="skill-tag">Hurricane Coverage</span>
            <span class="skill-tag">Crisis Communication</span>
            <span class="skill-tag">3D Graphics</span>
            <span class="skill-tag">IBM WSI Max Reality</span>
            <span class="skill-tag">Team Leadership</span>
            <span class="skill-tag">Public Speaking</span>
          </div>
        </div>

        <div class="sidebar-block">
          <h3>Languages</h3>
          <div class="lang-item">
            <span class="lang-name">English</span>
            <span class="lang-level">Fluent</span>
          </div>
          <div class="lang-bar"><div class="lang-bar-fill" style="width: 100%"></div></div>

          <div class="lang-item">
            <span class="lang-name">Spanish</span>
            <span class="lang-level">Native</span>
          </div>
          <div class="lang-bar"><div class="lang-bar-fill" style="width: 100%"></div></div>

          <div class="lang-item">
            <span class="lang-name">Arabic</span>
            <span class="lang-level">Learning</span>
          </div>
          <div class="lang-bar"><div class="lang-bar-fill" style="width: 30%"></div></div>
        </div>

        <div class="website-link">
          <a href="https://www.milmar.info">www.milmar.info</a>
        </div>
      </div>
    </div>

    <!-- On-Air Highlights -->
    <div class="video-section">
      <h2 class="section-title">On-Air Highlights</h2>
      <div class="video-grid">
        <a href="https://www.youtube.com/watch?v=S90FZGOSixo" target="_blank" class="video-thumb">
          <img src="https://img.youtube.com/vi/S90FZGOSixo/mqdefault.jpg" alt="Featured Broadcast 1" />
          <div class="play-icon"><svg viewBox="0 0 24 24"><polygon points="8,5 19,12 8,19"/></svg></div>
        </a>
        <a href="https://www.youtube.com/watch?v=aLz-Q5dqMgw" target="_blank" class="video-thumb">
          <img src="https://img.youtube.com/vi/aLz-Q5dqMgw/mqdefault.jpg" alt="Featured Broadcast 2" />
          <div class="play-icon"><svg viewBox="0 0 24 24"><polygon points="8,5 19,12 8,19"/></svg></div>
        </a>
        <a href="https://www.youtube.com/watch?v=BLMEajmpyKM" target="_blank" class="video-thumb">
          <img src="https://img.youtube.com/vi/BLMEajmpyKM/mqdefault.jpg" alt="Broadcast Segment" />
          <div class="play-icon"><svg viewBox="0 0 24 24"><polygon points="8,5 19,12 8,19"/></svg></div>
