---
import Layout from '../layouts/Layout.astro';
import EmailCopy from '../components/EmailCopy.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Broadcast & Media Resume" description="Emmy Award-Winning TV Meteorologist with 10+ years of on-camera experience">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-obsidian">
    <!-- Background Effects -->
    <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-broadcast/10 blur-3xl rounded-full pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-gold/5 blur-3xl rounded-full pointer-events-none"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="relative animate-scale-in group">
          <div class="w-40 h-40 rounded-full overflow-hidden border-2 border-broadcast/50 shadow-[0_0_30px_rgba(193,126,96,0.3)] group-hover:border-broadcast transition-colors duration-500 relative z-10">
            <img
              src={`${base}images/profile-broadcast.jpg`}
              alt="Milmar Ramirez"
              class="w-full h-full object-cover transition-all duration-500 group-hover:scale-110"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="hidden w-full h-full items-center justify-center text-white text-3xl font-bold bg-charcoal" style="font-family: var(--font-heading);">
              MR
            </div>
          </div>
          
          <!-- Decorative Rings -->
          <div class="absolute -inset-2 border border-white/5 rounded-full z-0 scale-110 group-hover:scale-105 transition-transform duration-700"></div>
          <div class="absolute -inset-4 border border-white/5 rounded-full z-0 scale-125 group-hover:scale-110 transition-transform duration-700 delay-100"></div>

          <div class="absolute -bottom-2 -right-4 bg-gradient-to-r from-gold to-gold-dark text-obsidian px-4 py-1.5 rounded-sm text-xs font-bold shadow-lg tracking-wider transform rotate-[-2deg] hover:rotate-0 transition-transform z-20">
            EMMY WINNER
          </div>
        </div>

        <!-- Header Info -->
        <div class="text-center md:text-left animate-slide-up flex-1">
          <div class="inline-flex items-center gap-2 mb-4">
             <span class="w-2 h-2 rounded-full bg-broadcast animate-pulse"></span>
             <span class="text-xs font-bold tracking-[0.2em] text-broadcast uppercase">Meteorology</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-3" style="font-family: var(--font-heading);">
            Milmar Ramirez
          </h1>
          <p class="text-xl text-silver mb-8 font-light">TV Meteorologist & Science Communicator</p>

          <div class="flex flex-wrap gap-6 justify-center md:justify-start text-sm">
            <EmailCopy class="flex items-center text-gray-400 hover:text-gold transition-colors group">
              <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-gold/20 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </span>
              Email Me
            </EmailCopy>
            <a href="https://www.linkedin.com/in/milmarramirez/" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-400 hover:text-gold transition-colors group">
               <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-gold/20 transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
               </span>
              LinkedIn
            </a>
            <span class="flex items-center text-gray-500">
               <span class="p-2 bg-white/5 rounded-full mr-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
               </span>
              Khobar, Saudi Arabia
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-onyx relative">
    <div class="absolute top-0 w-full h-[1px] bg-gradient-to-r from-transparent via-broadcast/30 to-transparent"></div>
    
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-16">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-16">
          <!-- Profile Summary -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-broadcast);"></span>
              Professional Profile
            </h2>
            <div class="text-gray-300 leading-relaxed text-lg font-light border-l-2 border-white/5 pl-6 py-2">
              TV Meteorologist with over a decade of on-camera experience delivering
              accurate weather forecasts and leading severe weather coverage. Expert in hurricane reporting,
              crisis communication, and engaging audiences across major networks including <strong class="text-white">The Weather Channel</strong>,
              <strong class="text-white">Telemundo</strong>, and <strong class="text-white">Univision</strong>. Known for translating complex atmospheric science into compelling,
              accessible broadcasts that keep communities informed and safe.
            </div>
          </div>

          <!-- Work Experience -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-8 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-broadcast);"></span>
              Career History
            </h2>

            <div class="space-y-12">
              <!-- The Weather Channel -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-broadcast ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div>
                      <h3 class="text-xl font-bold text-white">On-Camera Meteorologist</h3>
                      <p class="text-broadcast font-medium">The Weather Channel</p>
                  </div>
                  <span class="inline-block mt-2 sm:mt-0 px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2022 - 2024</span>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Anchor of morning shows reaching millions of viewers nationwide
                  </li>
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Covered severe storms including hurricanes in studio and field locations
                  </li>
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Led team on storm coverage for hurricanes, severe weather, and snow events
                  </li>
                </ul>
              </div>

              <!-- Telemundo -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-broadcast ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div class="flex items-center gap-3">
                    <div>
                        <h3 class="text-xl font-bold text-white">TV Meteorologist</h3>
                        <p class="text-broadcast font-medium">Telemundo 39</p>
                    </div>
                  </div>
                  <div class="flex flex-col items-end gap-2">
                     <span class="inline-block px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2015 - 2018</span>

                  </div>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Presented daily weather forecasts for Spanish-speaking audiences
                  </li>
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Advanced 3D graphics production using IBM WSI: Max Reality, Social, Storm tracking
                  </li>
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Led severe weather coverage planning and coordinated news reporter locations
                  </li>
                </ul>
              </div>

              <!-- Univision -->
              <div class="relative pl-8 border-l border-white/10">
                <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-gray-600 ring-4 ring-onyx"></div>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4">
                  <div>
                      <h3 class="text-xl font-bold text-white">TV Meteorologist</h3>
                      <p class="text-broadcast font-medium">Univision 23</p>
                  </div>
                  <span class="inline-block mt-2 sm:mt-0 px-3 py-1 bg-white/5 rounded text-xs font-mono text-gray-400">2014 - 2015</span>
                </div>
                
                <ul class="space-y-3 text-gray-400">
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Forecasted, produced graphics, and presented weather Monday to Friday mornings
                  </li>
                  <li class="flex items-start">
                    <span class="text-broadcast mr-3 transform translate-y-[2px]">▸</span>
                    Utilized Weather Central Fusion systems for dynamic storytelling
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Education -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-broadcast/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Education
            </h2>
            <div>
              <p class="font-bold text-white text-lg">Double Bachelor of Science</p>
              <p class="text-sm text-gray-400 mb-2">Atmospheric Science & Mathematics</p>
              <p class="text-sm font-semibold text-broadcast">University of Miami</p>
              <p class="text-xs text-gray-500 mt-1 font-mono">2011 - 2014</p>
            </div>
          </div>

          <!-- Skills -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-broadcast/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Expertise
            </h2>
            <div class="flex flex-wrap gap-2">
              {['Live Broadcasting', 'Weather Forecasting', 'Hurricane Coverage', 'Crisis Communication', '3D Graphics', 'IBM WSI Max Reality', 'Team Leadership', 'Public Speaking'].map(skill => (
                  <span class="px-3 py-1 bg-white/5 text-gray-300 text-xs rounded-sm border border-white/5 hover:border-broadcast/50 hover:text-broadcast transition-colors cursor-default">
                      {skill}
                  </span>
              ))}
            </div>
          </div>

          <!-- Languages -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-broadcast/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Languages
            </h2>
            <div class="space-y-4">
              <div>
                <div class="flex justify-between mb-1">
                  <span class="text-sm font-medium text-white">English</span>
                  <span class="text-xs text-broadcast">Fluent</span>
                </div>
                <div class="h-1 bg-white/10 rounded-full overflow-hidden">
                  <div class="h-full bg-auth-gradient w-full bg-gradient-to-r from-broadcast to-broadcast/50"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span class="text-sm font-medium text-white">Spanish</span>
                  <span class="text-xs text-broadcast">Native</span>
                </div>
                <div class="h-1 bg-white/10 rounded-full overflow-hidden">
                  <div class="h-full w-full bg-gradient-to-r from-broadcast to-broadcast/50"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between mb-1">
                  <span class="text-sm font-medium text-white">Arabic</span>
                  <span class="text-xs text-gray-500">Learning</span>
                </div>
                <div class="h-1 bg-white/10 rounded-full overflow-hidden">
                  <div class="h-full w-[30%] bg-gradient-to-r from-gold to-gold/50"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Download / Print -->
          <div class="reveal">
            <a href={`${base}print-broadcast`} class="w-full btn-secondary group flex items-center justify-center gap-2 border-white/20 hover:border-broadcast hover:text-broadcast text-white">
              <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print Resume
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Gallery -->
  <section id="on-air" class="py-16 bg-charcoal border-t border-white/5">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 reveal">
        <h2 class="text-3xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
          <span class="text-broadcast">On-Air</span> Highlights
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Watch my weather forecasts and live coverage from major networks.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 reveal">
        <!-- Featured Video 1 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/S90FZGOSixo"
            title="Milmar Ramirez - Featured 1"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>

        <!-- Featured Video 2 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/aLz-Q5dqMgw"
            title="Milmar Ramirez - Featured 2"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>

        <!-- Video 4 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/BLMEajmpyKM"
            title="Milmar Ramirez - Broadcast Segment 2"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>

        <!-- Video 3 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/cYmrZoI3K7k"
            title="Milmar Ramirez - Broadcast Segment 3"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>

        <!-- Video 4 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/yjCqEYCuMDM"
            title="Milmar Ramirez - Broadcast Segment 4"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>

        <!-- Video 5 -->
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-broadcast/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/r_LLojQvTZY"
            title="Milmar Ramirez - Broadcast Segment 5"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Resumes CTA -->
  <section class="py-16 bg-obsidian border-t border-white/5">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        Broaden The Scope
      </h3>
      <div class="flex flex-wrap justify-center gap-6">
        <a href={`${base}resume-tech`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-tech/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-tech/10 text-tech group-hover:bg-tech group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Technology</div>
             <div class="text-xs text-gray-500 group-hover:text-tech transition-colors">Scrum Master</div>
          </div>
        </a>
        
        <a href={`${base}resume-educator`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-educator/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-educator/10 text-educator group-hover:bg-educator group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Education</div>
             <div class="text-xs text-gray-500 group-hover:text-educator transition-colors">Science Communicator</div>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

