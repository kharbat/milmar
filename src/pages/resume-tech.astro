---
import Layout from '../layouts/Layout.astro';
import EmailCopy from '../components/EmailCopy.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Technology & Agile Resume" description="Certified Scrum Master with strong project coordination and IT enthusiasm">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-obsidian">
     <!-- Tech Background Effect -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(18,18,18,0.9),rgba(18,18,18,0.95)),url('/grid-pattern.svg')] opacity-20"></div>
    <div class="absolute top-0 left-1/4 w-1/3 h-1/3 bg-tech/10 blur-3xl rounded-full pointer-events-none"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="relative animate-scale-in group">
          <div class="w-40 h-40 rounded-full overflow-hidden border-2 border-tech/50 shadow-[0_0_30px_rgba(74,143,127,0.3)] group-hover:border-tech transition-colors duration-500 relative z-10">
            <img
              src={`${base}images/profile-tech.jpg`}
              alt="Milmar Ramirez"
              class="w-full h-full object-cover transition-all duration-500 group-hover:scale-110"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="hidden w-full h-full items-center justify-center text-white text-3xl font-bold bg-charcoal" style="font-family: var(--font-heading);">
              MR
            </div>
          </div>
          
          <!-- Tech Hexagon/Circle Decoration -->
          <svg class="absolute -top-3 -left-3 w-46 h-46 text-tech/30 animate-spin-slow" viewBox="0 0 100 100" style="width: 115%; height: 115%; left: -7.5%; top: -7.5%;">
             <circle cx="50" cy="50" r="48" fill="none" stroke="currentColor" stroke-width="0.5" stroke-dasharray="4 4" />
          </svg>

          <div class="absolute -bottom-2 -right-4 bg-tech text-white px-4 py-1.5 rounded-sm text-xs font-bold shadow-lg tracking-wider transform rotate-[-2deg] hover:rotate-0 transition-transform z-20">
            CERTIFIED SCRUM MASTER
          </div>
        </div>

        <!-- Header Info -->
        <div class="text-center md:text-left animate-slide-up flex-1">
          <div class="inline-flex items-center gap-2 mb-4">
             <span class="w-2 h-2 rounded-full bg-tech animate-pulse"></span>
             <span class="text-xs font-bold tracking-[0.2em] text-tech uppercase">Technology & Agile</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-3" style="font-family: var(--font-heading);">
            Milmar Ramirez
          </h1>
          <p class="text-xl text-silver mb-8 font-light">AI & Tech Enthusiast</p>

          <div class="flex flex-wrap gap-6 justify-center md:justify-start text-sm">
            <EmailCopy class="flex items-center text-gray-400 hover:text-tech transition-colors group">
              <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </span>
              Email Me
            </EmailCopy>
            <a href="https://www.linkedin.com/in/milmarramirez/" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-400 hover:text-tech transition-colors group">
               <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
               </span>
              LinkedIn
            </a>
            <span class="flex items-center text-gray-500">
               <span class="p-2 bg-white/5 rounded-full mr-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
               </span>
              Khobar, Saudi Arabia
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Built From Scratch -->
  <section class="py-16 bg-obsidian border-t border-white/5">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 reveal">
        <h2 class="text-3xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
          <span class="text-tech">Built</span> From Scratch
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">I didn't just learn about e-commerce‚ÄîI built my own store from the ground up.</p>
      </div>

      <div class="reveal">
        <!-- Milmares Store Card -->
        <div class="group relative bg-charcoal rounded-sm overflow-hidden border border-white/5 hover:border-tech/50 transition-all hover:-translate-y-1">
          <div class="grid md:grid-cols-2 gap-0">
            <!-- Image Slider Side -->
            <a href="https://www.instagram.com/milmares.store/" target="_blank" rel="noopener noreferrer" class="relative aspect-[4/5] md:aspect-auto overflow-hidden block milmares-slider">
              <div class="slider-container relative w-full h-full">
                <img src={`${base}images/milmares-1.jpg`} alt="Milmares Store Product 1" class="slider-img absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-700" />
                <img src={`${base}images/milmares-2.jpg`} alt="Milmares Store Product 2" class="slider-img absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-700" />
                <img src={`${base}images/milmares-3.jpg`} alt="Milmares Store Product 3" class="slider-img absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-700" />
                <img src={`${base}images/milmares-4.jpg`} alt="Milmares Store Product 4" class="slider-img absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-700" />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-transparent to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <p class="text-2xl font-bold text-white italic drop-shadow-lg" style="font-family: var(--font-heading);">ùë¥ùíäùíçùíéùíÇùíìùíÜùíî</p>
                <p class="text-tech text-sm mt-1">E-Commerce Store</p>
              </div>
              <!-- Slider Dots -->
              <div class="absolute bottom-16 left-1/2 -translate-x-1/2 flex gap-2">
                <span class="slider-dot w-2 h-2 rounded-full bg-white/80 transition-all"></span>
                <span class="slider-dot w-2 h-2 rounded-full bg-white/30 transition-all"></span>
                <span class="slider-dot w-2 h-2 rounded-full bg-white/30 transition-all"></span>
                <span class="slider-dot w-2 h-2 rounded-full bg-white/30 transition-all"></span>
              </div>
            </a>

            <!-- Content Side -->
            <div class="p-8 flex flex-col justify-center">
              <div class="inline-flex items-center gap-2 mb-3">
                <span class="px-2 py-0.5 bg-tech/20 text-tech text-xs font-bold rounded">SHOPIFY</span>
                <span class="px-2 py-0.5 bg-white/10 text-gray-400 text-xs rounded">E-COMMERCE</span>
              </div>

              <a href="https://www.instagram.com/milmares.store/" target="_blank" rel="noopener noreferrer" class="inline-block">
                <h3 class="text-2xl font-bold text-white mb-3 hover:text-tech transition-colors" style="font-family: var(--font-heading);">
                  Milmares Store
                </h3>
              </a>

              <p class="text-gray-400 mb-6 leading-relaxed">
                Founded and manage an online retail store, handling everything from product sourcing and inventory management to marketing and customer experience. This venture demonstrates my entrepreneurial spirit and hands-on experience with e-commerce platforms.
              </p>

              <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-2 py-1 bg-white/5 text-xs text-gray-400 rounded">Shopify</span>
                <span class="px-2 py-1 bg-white/5 text-xs text-gray-400 rounded">Social Media Marketing</span>
                <span class="px-2 py-1 bg-white/5 text-xs text-gray-400 rounded">Product Management</span>
                <span class="px-2 py-1 bg-white/5 text-xs text-gray-400 rounded">Customer Service</span>
              </div>

              <a
                href="https://www.instagram.com/milmares.store/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-tech hover:text-white transition-colors group/link"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                <span class="group-hover/link:underline">View on Instagram</span>
                <svg class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-onyx relative">
    <div class="absolute top-0 w-full h-[1px] bg-gradient-to-r from-transparent via-tech/30 to-transparent"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-16">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-16">
          <!-- Why Tech & Agile -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-tech);"></span>
              Why Tech & IT
            </h2>
            <div class="text-gray-300 leading-relaxed text-lg font-light border-l-2 border-tech/30 pl-6 py-2 space-y-4">
              <p>
                Technology has always fascinated me‚Äînot just as a tool, but as a way to <strong class="text-white">solve problems and connect people</strong>.
                My journey into Agile and Scrum started from a genuine curiosity about how high-performing teams deliver results under pressure.
              </p>
              <p>
                I earned my <strong class="text-tech">Certified Scrum Master</strong> credential because I believe in the power of iterative improvement,
                transparent communication, and empowering teams to do their best work. I've been actively exploring AI tools‚Äîusing them daily
                for presentations, prototyping apps, generating content, and editing images.
              </p>
              <p>
                What I bring isn't years of traditional tech experience‚Äîit's something different: <strong class="text-white">the ability to lead under pressure,
                communicate complex ideas clearly, and adapt rapidly</strong> when plans change. These skills, honed through years of live broadcasting,
                translate directly to the fast-paced world of technology and agile teams.
              </p>
            </div>
          </div>

          <!-- Transferable Strengths -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-8 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-tech);"></span>
              Core Strengths
            </h2>

            <div class="grid sm:grid-cols-2 gap-6">
              <!-- Crisis Leadership -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-tech/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-tech/10 flex items-center justify-center mb-4 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Crisis Leadership</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Years of managing live storm coverage taught me to make quick decisions, stay calm under pressure, and lead teams through uncertainty.
                </p>
              </div>

              <!-- Cross-functional Coordination -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-tech/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-tech/10 flex items-center justify-center mb-4 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Cross-functional Coordination</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Experienced in aligning diverse teams‚Äîproducers, engineers, field crews‚Äîtoward a common goal with clear communication.
                </p>
              </div>

              <!-- Rapid Adaptation -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-tech/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-tech/10 flex items-center justify-center mb-4 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Rapid Adaptation</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Live TV means constant change. I've mastered the art of pivoting quickly while maintaining quality and composure.
                </p>
              </div>

              <!-- Clear Communication -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-tech/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-tech/10 flex items-center justify-center mb-4 group-hover:bg-tech/20 transition-colors">
                  <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Clear Communication</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Translating complex scientific data into accessible language for millions‚Äîa skill that applies directly to stakeholder communication.
                </p>
              </div>
            </div>
          </div>

          <!-- What I'm Looking For -->
          <div class="reveal p-8 rounded-sm bg-gradient-to-br from-tech/10 to-transparent border border-tech/20">
            <h2 class="text-xl font-bold text-white mb-4 flex items-center gap-3" style="font-family: var(--font-heading);">
              <svg class="w-6 h-6 text-tech" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              What I'm Looking For
            </h2>
            <p class="text-gray-300 leading-relaxed">
              I would be interested in opportunities where I can apply my Scrum Master certification and grow as an agile practitioner.
              Whether it's a Scrum Master role, project coordination position, or a team that values fresh perspectives
              and strong communication skills‚ÄîI'm ready to contribute, learn, and help teams deliver great work.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
           <!-- Certifications -->
          <div class="reveal p-6 rounded-sm bg-gradient-to-br from-charcoal to-obsidian border border-tech/30 relative overflow-hidden">
             <div class="absolute top-0 right-0 w-16 h-16 bg-tech/10 blur-xl rounded-full"></div>
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2 relative z-10">
              Certifications
            </h2>
            <div class="flex items-center gap-4 relative z-10">
              <div class="w-12 h-12 rounded-sm flex items-center justify-center bg-tech/20 border border-tech/30 text-tech">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" /></svg>
              </div>
              <div>
                <p class="font-bold text-white">Scrum Master</p>
                <p class="text-xs text-tech mt-1">Certified 2025</p>
              </div>
            </div>
          </div>

          <!-- Technical Skills -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-tech/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Technical Stack
            </h2>
            <div class="flex flex-wrap gap-2">
              {['Scrum / Agile', 'Project Management', 'Product Development', 'Team Leadership', 'IBM WSI Systems', '3D Graphics', 'JIRA / Confluence'].map(skill => (
                  <span class="px-3 py-1 bg-white/5 text-gray-300 text-xs rounded-sm border border-white/5 hover:border-tech/50 hover:text-tech transition-colors cursor-default">
                      {skill}
                  </span>
              ))}
            </div>
          </div>

          <!-- AI Tools & Skills -->
          <div class="reveal p-6 rounded-sm bg-gradient-to-br from-charcoal to-obsidian border border-tech/20 hover:border-tech/40 transition-colors relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 h-24 bg-tech/5 blur-2xl rounded-full"></div>
            <h2 class="text-sm font-bold text-tech uppercase tracking-widest mb-6 border-b border-tech/20 pb-2 flex items-center gap-2 relative z-10">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>
              AI-Powered Workflow
            </h2>
            <div class="flex flex-wrap gap-2 relative z-10">
              {['AI Presentations', 'AI App Prototyping', 'AI Image/Video Editing', 'AI Text Generation'].map(skill => (
                  <span class="px-3 py-1.5 bg-tech/20 text-white text-xs rounded-sm border border-tech/40 hover:bg-tech/30 transition-colors cursor-default">
                      {skill}
                  </span>
              ))}
            </div>
          </div>
          
           <!-- Core Competencies -->
           <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-tech/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Competencies
            </h2>
            <div class="space-y-4">
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-tech rounded-full"></div>
                  <span class="text-gray-400 text-sm">Clear Communication</span>
               </div>
