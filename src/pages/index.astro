---
import Layout from '../layouts/Layout.astro';
import EmailCopy from '../components/EmailCopy.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="min-h-screen pt-32 pb-20 relative overflow-hidden flex items-center">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-obsidian z-0"></div>
    <div class="absolute top-0 right-0 w-2/3 h-2/3 bg-radial-gradient from-gold/10 to-transparent opacity-40 blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-radial-gradient from-navy/20 to-transparent opacity-30 blur-3xl pointer-events-none"></div>
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Text Content -->
        <div class="animate-slide-up order-2 lg:order-1">
          <div class="flex items-center gap-3 mb-6">
            <span class="h-[1px] w-12 bg-gold"></span>
            <span class="text-gold uppercase tracking-[0.2em] text-sm font-semibold">Telling The Story</span>
          </div>

          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight" style="font-family: var(--font-heading);">
            Milmar <br/>
            <span class="text-gold-gradient">Ramirez</span>
          </h1>

          <p class="text-xl md:text-2xl text-silver mb-8 font-light italic">
            Emmy Award-Winning Meteorologist
          </p>

          <p class="text-gray-400 mb-10 leading-relaxed max-w-xl text-lg">
            Certified Scrum Master and passionate educator turning complex data into clear, compelling narratives â€” from the studio to the agile team room.
          </p>

          <div class="flex flex-wrap gap-4 mb-12">

             <div class="flex items-center gap-2 px-4 py-2 border border-white/10 bg-white/5 rounded-sm">
                <svg class="w-5 h-5 text-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span class="text-silver uppercase tracking-wider text-xs">Certified Scrum Master</span>
             </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-5">
            <a href="resume-broadcast#on-air" class="btn-primary text-center">
              Meet Milmar
            </a>
            <a href="#resumes" class="btn-secondary text-center">
              View Expertise
            </a>
          </div>
        </div>

        <!-- Profile Image - Spotlight Frame -->
        <div class="relative animate-fade-in delay-200 order-1 lg:order-2">
          <div class="relative z-10 mx-auto max-w-sm">
            <!-- Frame -->
            <div class="absolute -inset-1 bg-gradient-to-tr from-gold to-gold-dark opacity-30 blur-sm rounded-sm"></div>
            <div class="relative border border-gold/20 bg-onyx p-1 rounded-sm shadow-2xl">
                <div class="aspect-[4/5] overflow-hidden bg-charcoal relative group">
                  <div class="absolute inset-0 bg-gold/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10 pointer-events-none mix-blend-overlay"></div>
                  <img
                    src={`${base}images/profile.jpg`}
                    alt="Milmar Ramirez"
                    class="w-full h-full object-cover grayscale brightness-90 contrast-110 group-hover:grayscale-0 group-hover:brightness-100 transition-all duration-700 ease-in-out"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />
                  <!-- Fallback Placeholder -->
                  <div class="hidden w-full h-full items-center justify-center bg-onyx text-gold text-6xl font-bold" style="font-family: var(--font-heading);">
                    MR
                  </div>
                </div>
            </div>
            
            <!-- Graphic Element -->
            <div class="absolute -bottom-6 -right-6 w-24 h-24 border-r-2 border-b-2 border-gold/40 z-0"></div>
            <div class="absolute -top-6 -left-6 w-24 h-24 border-l-2 border-t-2 border-gold/40 z-0"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 bg-onyx relative overflow-hidden">
     <!-- Divider -->
    <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
    
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid lg:grid-cols-12 gap-12 lg:gap-20">
        <!-- Main Content -->
        <div class="lg:col-span-7 reveal">
          <h2 class="text-4xl text-white mb-8" style="font-family: var(--font-heading);">
            Bridging <span class="text-gold">Knowledge</span> and <span class="text-gold">People.</span>
          </h2>

          <div class="space-y-6 text-gray-300 font-light text-lg leading-relaxed">
            <p>
              From the high-pressure environment of live television at <strong class="text-white">The Weather Channel</strong>, 
              <strong class="text-white">Telemundo</strong>, and <strong class="text-white">Univision</strong>, 
              I mastered the art of delivering critical information with clarity and poise.
            </p>
            <p>
              My journey is defined by versatility. A <strong class="text-gold">University of Miami</strong> graduate 
              with a double major in Atmospheric Science and Math, I've evolved from an Emmy Award-winning meteorologist 
              into a certified <strong class="text-silver">Scrum Master</strong> and educational leader.
            </p>
            <p>
              Now based in <strong class="text-white">Khobar, Saudi Arabia</strong>, I bring a unique fusion 
              of analytical rigor and storytelling excellence to every challenge I undertake.
            </p>
          </div>
        </div>

        <!-- Quick Info / Stats -->
        <div class="lg:col-span-5 reveal delay-200">
          <div class="space-y-6">
             <!-- Stat Item -->
             <div class="bg-obsidian border border-white/5 p-6 hover:border-gold/30 transition-colors duration-300 group">
                <div class="text-gold font-heading text-5xl mb-1 opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all">10+</div>
                <div class="h-[1px] w-full bg-white/10 mb-3 group-hover:bg-gold/30 transition-colors"></div>
                <p class="text-sm uppercase tracking-widest text-silver">Years in Broadcast Media</p>
             </div>

             <!-- Stat Item -->
             <div class="bg-obsidian border border-white/5 p-6 hover:border-gold/30 transition-colors duration-300 group">
                <div class="text-gold font-heading text-5xl mb-1 opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all">3</div>
                <div class="h-[1px] w-full bg-white/10 mb-3 group-hover:bg-gold/30 transition-colors"></div>
                <p class="text-sm uppercase tracking-widest text-silver">Major Networks</p>
             </div>
          </div>
          
          <div class="mt-8 flex gap-4 justify-center lg:justify-start">
             <!-- Social Icons as minimal circles -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Ticker / Section -->
  <section class="py-20 bg-obsidian border-y border-white/5 relative">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center reveal">
      <h2 class="text-2xl font-light text-silver uppercase tracking-[0.3em] mb-12">
        Core Competencies
      </h2>

      <div class="flex flex-wrap justify-center gap-3">
        {['TV Broadcasting', 'Weather Forecasting', 'Crisis Communication', 'Scrum / Agile', 'Project Management', '3D Graphics Production', 'Public Speaking', 'Team Leadership', 'IBM WSI Systems', 'Bilingual (Native Spanish)'].map((skill) => (
           <span class="skill-tag">{skill}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- Resume Cards Section -->
  <section id="resumes" class="py-28 bg-gradient-to-b from-onyx to-obsidian relative">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <div class="w-16 h-1 bg-gold mx-auto mb-6"></div>
        <h2 class="text-4xl md:text-5xl text-white mb-6" style="font-family: var(--font-heading);">
          Expertise
        </h2>
        <p class="text-silver/60 max-w-2xl mx-auto text-lg font-light">
           A multifaceted career built on precision, innovation, and communication.
        </p>
      </div>

      <!-- Resume Cards -->
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Broadcast Card -->
        <a href={`${base}resume-broadcast`} class="card group p-8 md:p-10 reveal delay-100 flex flex-col items-center text-center hover:bg-white/5">
          <div class="mb-6 relative">
            <div class="absolute inset-0 bg-gold blur-xl opacity-20 group-hover:opacity-40 transition-opacity"></div>
            <div class="relative w-16 h-16 border border-gold/30 rounded-full flex items-center justify-center bg-obsidian text-gold">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </div>
          </div>
          
          <h3 class="text-2xl text-white mb-2 group-hover:text-gold transition-colors" style="font-family: var(--font-heading);">
            TV Broadcast & News
          </h3>
          <p class="text-xs text-gold uppercase tracking-widest mb-6">Meteorologist</p>

          <p class="text-gray-400 text-sm leading-relaxed mb-8 flex-grow">
            10+ years on-camera. Expert in visual storytelling and crisis coverage.
          </p>

          <span class="text-sm font-semibold text-white border-b border-gold/50 group-hover:border-gold pb-1 transition-all">
            View Portfolio
          </span>
        </a>

        <!-- Tech Card -->
        <a href={`${base}resume-tech`} class="card group p-8 md:p-10 reveal delay-200 flex flex-col items-center text-center hover:bg-white/5">
          <div class="mb-6 relative">
            <div class="absolute inset-0 bg-silver blur-xl opacity-10 group-hover:opacity-30 transition-opacity"></div>
            <div class="relative w-16 h-16 border border-silver/30 rounded-full flex items-center justify-center bg-obsidian text-silver">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
          </div>
          
          <h3 class="text-2xl text-white mb-2 group-hover:text-silver transition-colors" style="font-family: var(--font-heading);">
            Technology
          </h3>
          <p class="text-xs text-silver uppercase tracking-widest mb-6">Scrum Master</p>

          <p class="text-gray-400 text-sm leading-relaxed mb-8 flex-grow">
            Agile certified. Process optimization. Bridging the gap between technical teams and stakeholders.
          </p>

          <span class="text-sm font-semibold text-white border-b border-silver/50 group-hover:border-silver pb-1 transition-all">
            View Resume
          </span>
        </a>

        <!-- Educator Card -->
        <a href={`${base}resume-educator`} class="card group p-8 md:p-10 reveal delay-300 flex flex-col items-center text-center hover:bg-white/5">
          <div class="mb-6 relative">
            <div class="absolute inset-0 bg-white blur-xl opacity-10 group-hover:opacity-30 transition-opacity"></div>
            <div class="relative w-16 h-16 border border-white/30 rounded-full flex items-center justify-center bg-obsidian text-white">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          </div>
          
          <h3 class="text-2xl text-white mb-2 group-hover:text-white transition-colors" style="font-family: var(--font-heading);">
            Education
          </h3>
          <p class="text-xs text-secondary uppercase tracking-widest mb-6 text-gray-400">Communicator</p>

          <p class="text-gray-400 text-sm leading-relaxed mb-8 flex-grow">
            Making the complex simple. Engaging presentations and curriculum development.
          </p>

          <span class="text-sm font-semibold text-white border-b border-white/50 group-hover:border-white pb-1 transition-all">
            View Resume
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- Video Carousel -->
  <section class="py-20 bg-charcoal relative overflow-hidden">
    <div class="absolute top-0 w-full h-[1px] bg-gradient-to-r from-transparent via-gold/30 to-transparent"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 reveal">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
          <span class="text-gold">On-Air</span> Highlights
        </h2>
        <p class="text-gray-400 max-w-xl mx-auto">Watch my weather forecasts and live coverage from The Weather Channel, Telemundo, and Univision.</p>
      </div>

      <!-- Carousel Container -->
      <div class="relative reveal">
        <!-- Carousel Track -->
        <div class="video-carousel overflow-hidden">
          <div class="carousel-track flex transition-transform duration-500 ease-out" id="carouselTrack">
            <!-- Video 1 - Featured -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/S90FZGOSixo"
                  title="Milmar Ramirez - Featured 1"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
            <!-- Video 2 - Featured -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/aLz-Q5dqMgw"
                  title="Milmar Ramirez - Featured 2"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
            <!-- Video 3 -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/vwBAm352bQY"
                  title="Milmar Ramirez - Broadcast 1"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
            <!-- Video 4 -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/BLMEajmpyKM"
                  title="Milmar Ramirez - Broadcast 2"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
            <!-- Video 3 -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/cYmrZoI3K7k"
                  title="Milmar Ramirez - Broadcast 3"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
            <!-- Video 4 -->
            <div class="carousel-slide flex-shrink-0 w-full px-2">
              <div class="aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/10">
                <iframe
                  class="w-full h-full"
                  src="https://www.youtube-nocookie.com/embed/yjCqEYCuMDM"
                  title="Milmar Ramirez - Broadcast 4"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
          </div>
        </div>

        <!-- Navigation Arrows -->
        <button
          id="carouselPrev"
          class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 md:-translate-x-12 w-10 h-10 bg-obsidian/80 border border-white/10 rounded-full flex items-center justify-center text-white hover:bg-gold hover:text-black hover:border-gold transition-all z-10"
          aria-label="Previous video"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <button
          id="carouselNext"
          class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 md:translate-x-12 w-10 h-10 bg-obsidian/80 border border-white/10 rounded-full flex items-center justify-center text-white hover:bg-gold hover:text-black hover:border-gold transition-all z-10"
          aria-label="Next video"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>

        <!-- Dots Indicator -->
        <div class="flex justify-center gap-2 mt-6" id="carouselDots">
          <button class="carousel-dot w-2 h-2 rounded-full bg-gold" data-index="0" aria-label="Go to slide 1"></button>
          <button class="carousel-dot w-2 h-2 rounded-full bg-white/30 hover:bg-white/50 transition-colors" data-index="1" aria-label="Go to slide 2"></button>
          <button class="carousel-dot w-2 h-2 rounded-full bg-white/30 hover:bg-white/50 transition-colors" data-index="2" aria-label="Go to slide 3"></button>
          <button class="carousel-dot w-2 h-2 rounded-full bg-white/30 hover:bg-white/50 transition-colors" data-index="3" aria-label="Go to slide 4"></button>
          <button class="carousel-dot w-2 h-2 rounded-full bg-white/30 hover:bg-white/50 transition-colors" data-index="4" aria-label="Go to slide 5"></button>
          <button class="carousel-dot w-2 h-2 rounded-full bg-white/30 hover:bg-white/50 transition-colors" data-index="5" aria-label="Go to slide 6"></button>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Video Carousel
    const track = document.getElementById('carouselTrack');
    const dots = document.querySelectorAll('.carousel-dot');
    const prevBtn = document.getElementById('carouselPrev');
    const nextBtn = document.getElementById('carouselNext');
    let currentSlide = 0;
    const totalSlides = 6;

    function updateCarousel() {
      if (track) {
        track.style.transform = `translateX(-${currentSlide * 100}%)`;
      }
      dots.forEach((dot, index) => {
        dot.classList.toggle('bg-gold', index === currentSlide);
        dot.classList.toggle('bg-white/30', index !== currentSlide);
      });
    }

    prevBtn?.addEventListener('click', () => {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateCarousel();
    });

    nextBtn?.addEventListener('click', () => {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateCarousel();
    });

    dots.forEach(dot => {
      dot.addEventListener('click', () => {
        currentSlide = parseInt(dot.dataset.index || '0');
        updateCarousel();
      });
    });
  </script>

  <!-- Contact CTA -->
  <section class="py-24 relative overflow-hidden">
     <!-- Background with gradient -->
     <div class="absolute inset-0 bg-gradient-to-tr from-obsidian via-charcoal to-navy/20"></div>
     
