  <!-- Other Resumes CTA -->
  <section class="py-16 bg-cream">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold mb-8" style="font-family: var(--font-heading);">
        Explore Other Resume Versions
      </h3>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/resume-broadcast" class="btn-primary">
          Broadcast & Media
        </a>
        <a href="/resume-tech" class="btn-secondary" style="border-color: var(--color-teal); color: var(--color-teal);">
          Technology & Agile
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .edu-timeline-item {
    position: relative;
    padding-left: 2rem;
  }
  .edu-timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #9B59B6, #F39C12);
  }
  .edu-timeline-item::after {
    content: '';
    position: absolute;
    left: -6px;
    top: 0;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: #9B59B6;
    border: 3px solid var(--color-cream);
  }
  @media print {
    nav, footer, section:last-child {
      display: none !important;
    }
  }
</style>
