---
import Layout from '../layouts/Layout.astro';
import EmailCopy from '../components/EmailCopy.astro';
const base = import.meta.env.BASE_URL;
---

<Layout title="Education Resume" description="Teaching-oriented professional passionate about math, science, and making complex concepts accessible">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-obsidian">
     <!-- Educator Background Effect -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(107,91,149,0.1)_0%,rgba(10,10,10,1)_70%)] opacity-40"></div>
    <div class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-educator/10 blur-3xl rounded-full pointer-events-none"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="relative animate-scale-in group">
          <div class="w-40 h-40 rounded-full overflow-hidden border-2 border-educator/50 shadow-[0_0_30px_rgba(107,91,149,0.3)] group-hover:border-educator transition-colors duration-500 relative z-10">
            <img
              src={`${base}images/profile-educator.jpg`}
              alt="Milmar Ramirez"
              class="w-full h-full object-cover transition-all duration-500 group-hover:scale-110"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="hidden w-full h-full items-center justify-center text-white text-3xl font-bold bg-charcoal" style="font-family: var(--font-heading);">
              MR
            </div>
          </div>
          
          <!-- Book/Atom Decoration Rings -->
          <div class="absolute -inset-2 border-2 border-dashed border-educator/20 rounded-full z-0 animate-spin-slow" style="animation-duration: 20s;"></div>

          <div class="absolute -bottom-2 -right-4 bg-educator text-white px-4 py-1.5 rounded-sm text-xs font-bold shadow-lg tracking-wider transform rotate-[-2deg] hover:rotate-0 transition-transform z-20">
            EDUCATOR
          </div>
        </div>

        <!-- Header Info -->
        <div class="text-center md:text-left animate-slide-up flex-1">
          <div class="inline-flex items-center gap-2 mb-4">
             <span class="w-2 h-2 rounded-full bg-educator animate-pulse"></span>
             <span class="text-xs font-bold tracking-[0.2em] text-educator uppercase">Education & Outreach</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-3" style="font-family: var(--font-heading);">
            Milmar Ramirez
          </h1>
          <p class="text-xl text-silver mb-8 font-light">Math & Science Specialist | Bilingual Communicator</p>

          <div class="flex flex-wrap gap-6 justify-center md:justify-start text-sm">
            <EmailCopy class="flex items-center text-gray-400 hover:text-educator transition-colors group">
              <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </span>
              Email Me
            </EmailCopy>
            <a href="https://www.linkedin.com/in/milmarramirez/" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-400 hover:text-educator transition-colors group">
               <span class="p-2 bg-white/5 rounded-full mr-3 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
               </span>
              LinkedIn
            </a>
            <span class="flex items-center text-gray-500">
               <span class="p-2 bg-white/5 rounded-full mr-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
               </span>
              Khobar, Saudi Arabia
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Video -->
  <section class="py-16 bg-obsidian border-t border-white/5">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 reveal">
        <h2 class="text-3xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
          In the <span class="text-educator">Classroom</span>
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Where science meets storytelling.</p>
      </div>
      <div class="reveal">
        <div class="group relative aspect-video bg-obsidian rounded-sm overflow-hidden border border-white/5 hover:border-educator/50 transition-colors">
          <iframe
            class="w-full h-full"
            src="https://www.youtube-nocookie.com/embed/vwBAm352bQY"
            title="Milmar Ramirez - Science Education"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-onyx relative">
    <div class="absolute top-0 w-full h-[1px] bg-gradient-to-r from-transparent via-educator/30 to-transparent"></div>

    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-16">
        <!-- Main Column -->
        <div class="lg:col-span-2 space-y-16">
          <!-- Why Education -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-educator);"></span>
              Why Education
            </h2>
            <div class="text-gray-300 leading-relaxed text-lg font-light border-l-2 border-educator/30 pl-6 py-2 space-y-4">
              <p>
                Teaching has always been at the heart of what I do. Whether explaining a complex weather system to millions
                of viewers or helping a student grasp a mathematical concept, I find <strong class="text-white">deep fulfillment in those "aha!" moments</strong>.
              </p>
              <p>
                My background in <strong class="text-educator">Atmospheric Science and Mathematics</strong> gives me the technical foundation,
                but it's my decade of experience translating complex ideas for diverse audiences that makes me effective.
                I've learned that education isn't about showing what you know—it's about meeting people where they are.
              </p>
              <p>
                I'm passionate about making science and math <strong class="text-white">accessible, engaging, and relevant</strong>.
                My bilingual abilities allow me to connect with both English and Spanish-speaking learners,
                breaking down barriers to understanding.
              </p>
            </div>
          </div>

          <!-- Teaching Philosophy -->
          <div class="reveal p-8 rounded-sm bg-gradient-to-r from-educator/10 to-transparent border-l-4" style="border-left-color: var(--color-educator);">
            <h2 class="text-xl font-bold text-white mb-4" style="font-family: var(--font-heading);">
              Teaching Philosophy
            </h2>
            <p class="text-silver leading-relaxed italic text-lg font-light">
              "Education is not about filling a bucket, but lighting a fire. I believe in making complex
              subjects accessible through engaging storytelling, real-world connections, and creating
              a supportive learning environment where every student can thrive."
            </p>
          </div>

          <!-- Core Strengths -->
          <div class="reveal">
            <h2 class="text-2xl font-bold text-white mb-8 flex items-center" style="font-family: var(--font-heading);">
              <span class="w-12 h-[2px] mr-4" style="background: var(--color-educator);"></span>
              Core Strengths
            </h2>

            <div class="grid sm:grid-cols-2 gap-6">
              <!-- Making Complex Simple -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-educator/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-educator/10 flex items-center justify-center mb-4 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-6 h-6 text-educator" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Making Complex Simple</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Years of explaining weather science to millions taught me how to break down complex concepts into digestible, memorable lessons.
                </p>
              </div>

              <!-- Bilingual Communication -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-educator/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-educator/10 flex items-center justify-center mb-4 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-6 h-6 text-educator" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Bilingual Communication</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Fluent in English and Spanish, I can reach diverse learners and break down language barriers in education.
                </p>
              </div>

              <!-- Engaging Presentation -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-educator/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-educator/10 flex items-center justify-center mb-4 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-6 h-6 text-educator" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Engaging Presentation</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  Trained to capture and hold attention on live TV, I bring energy and engagement to every lesson.
                </p>
              </div>

              <!-- Patient & Supportive -->
              <div class="p-6 bg-charcoal rounded-sm border border-white/5 hover:border-educator/30 transition-colors group">
                <div class="w-12 h-12 rounded-full bg-educator/10 flex items-center justify-center mb-4 group-hover:bg-educator/20 transition-colors">
                  <svg class="w-6 h-6 text-educator" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white mb-2">Patient & Supportive</h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  I believe every learner can succeed with the right support. I create safe spaces where questions are welcomed.
                </p>
              </div>
            </div>
          </div>

          <!-- What I'm Looking For -->
          <div class="reveal p-8 rounded-sm bg-gradient-to-br from-educator/10 to-transparent border border-educator/20">
            <h2 class="text-xl font-bold text-white mb-4 flex items-center gap-3" style="font-family: var(--font-heading);">
              <svg class="w-6 h-6 text-educator" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              What I'm Looking For
            </h2>
            <p class="text-gray-300 leading-relaxed">
              I would be interested in opportunities where I can share my passion for math, science, and effective communication.
              Whether it's classroom teaching, tutoring, corporate training, or educational content creation—I'm eager to
              help learners of all ages discover the joy of understanding.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
           <!-- Subject Areas -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-educator/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Subject Mastery
            </h2>
            <div class="grid grid-cols-1 gap-4">
               <div class="flex items-center gap-4 group">
                  <div class="w-10 h-10 rounded-sm bg-educator/10 flex items-center justify-center text-educator group-hover:bg-educator group-hover:text-white transition-colors">
                     <span class="font-bold">M</span>
                  </div>
                  <div>
                     <div class="text-white font-bold text-sm">Mathematics</div>
                     <div class="text-xs text-gray-500">Algebra, Calculus, Stats</div>
                  </div>
               </div>
               <div class="flex items-center gap-4 group">
                  <div class="w-10 h-10 rounded-sm bg-educator/10 flex items-center justify-center text-educator group-hover:bg-educator group-hover:text-white transition-colors">
                     <span class="font-bold">S</span>
                  </div>
                  <div>
                     <div class="text-white font-bold text-sm">Atmospheric Science</div>
                     <div class="text-xs text-gray-500">Weather, Climate, Env</div>
                  </div>
               </div>
               <div class="flex items-center gap-4 group">
                  <div class="w-10 h-10 rounded-sm bg-educator/10 flex items-center justify-center text-educator group-hover:bg-educator group-hover:text-white transition-colors">
                     <span class="font-bold">L</span>
                  </div>
                  <div>
                     <div class="text-white font-bold text-sm">Language Arts</div>
                     <div class="text-xs text-gray-500">Spanish Instruction</div>
                  </div>
               </div>
            </div>
          </div>

          <!-- Approach -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-educator/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Methodology
            </h2>
            <div class="space-y-4">
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-educator rounded-full"></div>
                  <span class="text-gray-400 text-sm">Engaging Storytelling</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-educator rounded-full"></div>
                  <span class="text-gray-400 text-sm">Visual Learning</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-educator rounded-full"></div>
                  <span class="text-gray-400 text-sm">Real-World Application</span>
               </div>
               <div class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 bg-educator rounded-full"></div>
                  <span class="text-gray-400 text-sm">Supportive Environment</span>
               </div>
            </div>
          </div>

          <!-- Education -->
          <div class="reveal p-6 rounded-sm bg-charcoal border border-white/5 hover:border-educator/30 transition-colors">
            <h2 class="text-sm font-bold text-silver uppercase tracking-widest mb-6 border-b border-white/10 pb-2">
              Education
            </h2>
            <div class="space-y-4">
              <div>
                <p class="font-bold text-white text-lg">Double Bachelor of Science</p>
                <p class="text-sm text-gray-400 mb-2">Atmospheric Science & Mathematics</p>
                <p class="text-sm font-semibold text-educator">University of Miami</p>
                <p class="text-xs text-gray-500 mt-1 font-mono">2011 - 2014</p>
              </div>
              <div class="pt-4 border-t border-white/5">
                <p class="font-bold text-white">Scrum Master Certification</p>
                <p class="text-sm text-gray-500">Project Management</p>
              </div>
            </div>
          </div>

          <!-- Download / Print -->
          <div class="reveal">
            <button onclick="window.print()" class="w-full btn-secondary group flex items-center justify-center gap-2 border-white/20 hover:border-educator hover:text-educator text-white">
              <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print Resume
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Resumes CTA -->
  <section class="py-16 bg-charcoal border-t border-white/5">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        Broaden The Scope
      </h3>
      <div class="flex flex-wrap justify-center gap-6">
        <a href={`${base}resume-broadcast`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-broadcast/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-broadcast/10 text-broadcast group-hover:bg-broadcast group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Meteorology</div>
             <div class="text-xs text-gray-500 group-hover:text-broadcast transition-colors">Meteorologist</div>
          </div>
        </a>
        
        <a href={`${base}resume-tech`} class="group flex items-center gap-3 px-6 py-4 rounded-sm bg-obsidian border border-white/5 hover:border-tech/50 transition-all hover:-translate-y-1">
          <span class="p-2 rounded-full bg-tech/10 text-tech group-hover:bg-tech group-hover:text-white transition-colors">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" /></svg>
          </span>
          <div class="text-left">
             <div class="text-sm font-bold text-white">Technology</div>
             <div class="text-xs text-gray-500 group-hover:text-tech transition-colors">Scrum Master</div>
          </div>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @media print {
    nav, footer, section:last-child {
      display: none !important;
    }
    body {
       background-color: white !important;
       color: black !important;
    }
    section {
       background-color: white !important;
       background: none !important;
       padding-top: 0 !important;
       padding-bottom: 2rem !important;
    }
    .text-white, .text-silver, .text-gray-300, .text-gray-400 {
       color: black !important;
    }
    .bg-charcoal, .bg-obsidian, .bg-onyx {
       background-color: transparent !important;
       border: none !important;
    }
    .border-white\/5, .border-white\/10 {
       border-color: #ddd !important;
    }
    h1, h2, h3 {
       color: black !important;
    }
  }
</style>
