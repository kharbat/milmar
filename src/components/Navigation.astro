  <!-- Mobile menu -->
  <div id="mobile-menu" class="mobile-menu fixed top-20 right-0 bottom-0 w-64 bg-onyx border-l border-white/10 shadow-2xl md:hidden transform transition-transform duration-300 ease-in-out translate-x-full">
    <div class="flex flex-col p-8 space-y-6">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-silver hover:text-gold font-medium text-lg border-b border-white/5 pb-4 tracking-wide"
        >
          {link.label}
        </a>
      ))}
      
      <!-- Mobile Controls -->
      <div class="flex items-center justify-between pt-4 border-t border-white/10">
         <span class="text-silver text-sm">Theme</span>
         <button id="mobile-theme-toggle" class="p-2 text-gold border border-gold/30 rounded">
            <span class="dark:hidden">{t('nav.theme.dark')}</span>
            <span class="hidden dark:inline">{t('nav.theme.light')}</span>
         </button>
      </div>

      <div class="flex flex-col gap-3">
         <span class="text-silver text-sm">Language</span>
         <div class="flex gap-2">
            <a href={`${base}`} class="lang-select px-3 py-1 text-xs border border-gold/50 text-gold rounded" data-lang="en">EN</a>
            <a href={`${base}es/`} class="lang-select px-3 py-1 text-xs border border-white/10 text-gray-500 rounded" data-lang="es">ES</a>
            <a href={`${base}ar/`} class="lang-select px-3 py-1 text-xs border border-white/10 text-gray-500 rounded" data-lang="ar">AR</a>
         </div>
      </div>

      <a
        href="https://www.linkedin.com/in/milmarramirez/"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary text-center mt-4 w-full"
      >
        {t('nav.connect')}
      </a>
    </div>
  </div>
</nav>

<style>
  .emmy-nav-icon {
    filter: drop-shadow(0 0 3px rgba(212, 175, 55, 0.6)) drop-shadow(0 0 6px rgba(244, 196, 48, 0.3)) brightness(1.1);
  }
  .group:hover .emmy-nav-icon {
    filter: drop-shadow(0 0 4px rgba(212, 175, 55, 1)) drop-shadow(0 0 10px rgba(244, 196, 48, 0.5)) brightness(1.2);
  }
</style>

<script is:inline>
  // Mobile Menu Logic
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('translate-x-full');
  });

  // Theme Logic
  const themeToggles = [document.getElementById('theme-toggle'), document.getElementById('mobile-theme-toggle')];
  const html = document.documentElement;
  const sunIcon = document.getElementById('sun-icon');
  const moonIcon = document.getElementById('moon-icon');

  // Check Local Storage or System Preference
  const savedTheme = localStorage.getItem('theme');
  const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

  if (savedTheme === 'light') {
    html.setAttribute('data-theme', 'light');
    updateIcons(true);
  } else {
    html.removeAttribute('data-theme');
    updateIcons(false);
  }

  function updateIcons(isLight) {
     if(isLight) {
        sunIcon?.classList.add('hidden');
        moonIcon?.classList.remove('hidden');
     } else {
        sunIcon?.classList.remove('hidden');
        moonIcon?.classList.add('hidden');
     }
  }

  themeToggles.forEach(toggle => {
      toggle?.addEventListener('click', () => {
        const isLight = html.getAttribute('data-theme') === 'light';
        if (isLight) {
            html.removeAttribute('data-theme');
            localStorage.setItem('theme', 'dark');
            updateIcons(false);
        } else {
            html.setAttribute('data-theme', 'light');
            localStorage.setItem('theme', 'light');
            updateIcons(true);
        }
      });
  });
</script>

<script is:inline>
  // Language Persistence & Auto-Redirect (All Pages)
  const langButtons = document.querySelectorAll('.lang-select');
  const currentLang = document.documentElement.lang || 'en';

  // 1. Save language preference on click
  langButtons.forEach(btn => {
      btn.addEventListener('click', () => {
          const targetLang = btn.getAttribute('data-lang');
          if(targetLang) {
              localStorage.setItem('preferred_lang', targetLang);
          }
      });
  });

  // 2. Redirect on Load if Language Mismatch
  const savedLang = localStorage.getItem('preferred_lang');
  const path = window.location.pathname;
  const basePath = '/milmar/';

  // Only redirect if there's a saved preference AND it differs from current page language
  if (savedLang && savedLang !== currentLang) {
      // Extract the page-specific path (everything after language prefix)
      let pagePath = path.replace(basePath, ''); // Remove base
      
      // Remove any existing language prefix (es/, ar/)
      if (pagePath.startsWith('es/')) {
          pagePath = pagePath.substring(3);
      } else if (pagePath.startsWith('ar/')) {
          pagePath = pagePath.substring(3);
      }
      
      // Build new URL based on saved preference
      let newUrl;
      if (savedLang === 'en') {
          newUrl = basePath + pagePath;
      } else {
          newUrl = basePath + savedLang + '/' + pagePath;
      }
      
      // Redirect (only if URL is actually different to prevent loops)
      if (newUrl !== path && newUrl !== path + '/') {
          window.location.href = newUrl;
      }
  }
</script>
